" sourced from  github and my needs.
" documentation: http://dactyl.sourceforge.net/help/pentadactyl/
"
"

""""""""""""""""""""""""""
"
""      UI              ""
""""""""""""""""""""""""""
set visualbell

" hide scrollbars
set guioptions-=b
set guioptions-=r

" maximum number of lines to display in a listing
set maxitems=15

" don't show search suggestions or local files
set complete-=s
set complete-=l

""""""""""""""""""""""""""
"
""      Pass Keys       ""
""""""""""""""""""""""""""
" Google Experimental Search
" http://www.google.com/experimental/
set passkeys+='google\.com':jk<Return><S-Return><Esc>/

""""""""""""""""""""""""""
"
""      Key Remapping   ""
""""""""""""""""""""""""""

" capital J and K jump by 10 lines
nmap J 10j
nmap K 10k
