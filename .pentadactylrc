""""""""""""""""""""""""""
"
""      UI              ""
""""""""""""""""""""""""""
set visualbell

" hide scrollbars
set guioptions-=b
set guioptions-=r

" maximum number of lines to display in a listing
set maxitems=15

" don't show search suggestions or local files
" set complete-=s
" set complete-=l

" colorscheme
colorscheme simple

""""""""""""""""""""""""""
"
""      Pass Keys       ""
""""""""""""""""""""""""""
" Google Experimental Search
" http://www.google.com/experimental/
" set passkeys+='google\.com':jk<Return><S-Return><Esc>/
"" no longer relevant since they disabled my blessed experiment

""""""""""""""""""""""""""
"
""      Key Remapping   ""
""""""""""""""""""""""""""

" capital J and K jump by 10 lines
nmap J 10j
nmap K 10k

" prevent mediawikis from stealing keys
" http://www.mozdev.org/pipermail/vimperator/2009-April/004221.html
set! ui.key.contentAccess=3
